{
  "name": "@finos/calm-server",
  "version": "0.1.0",
  "description": "REST API server for validating CALM architectures and patterns",
  "homepage": "https://calm.finos.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/finos/architecture-as-code.git"
  },
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "files": [
    "dist/"
  ],
  "bin": {
    "calm-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "dependency-check": "dependency-check --project 'calm-server' --scan . --out ./dependency-check-report --format ALL --suppression ../.github/node-cve-ignore-list.xml"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "calm",
    "server",
    "validation",
    "architecture"
  ],
  "author": "FINOS",
  "license": "Apache-2.0",
  "dependencies": {
    "@finos/calm-shared": "file:../shared",
    "commander": "^14.0.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.0.0"
  },
  "devDependencies": {
    "@stoplight/types": "^14.1.1",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitest/coverage-v8": "^3.1.1",
    "axios": "^1.12.0",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "supertest": "^7.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
